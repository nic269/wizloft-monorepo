{
  "name": "wizloft-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean:all-dist": "pnpm -r exec rm -rf dist",
    "clean:all-next": "pnpm -r exec rm -rf .next",
    "clean:all-deps": "pnpm -r exec rm -rf node_modules && pnpm exec rm -rf node_modules",
    "upgrade:all-deps": "pnpm up --latest -r && pnpm up --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
